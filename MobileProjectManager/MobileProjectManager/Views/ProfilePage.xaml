<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileProjectManager.Views.ProfilePage">
    <ContentPage.Content>
        <StackLayout>
            <Image 
                   BackgroundColor="Red"
                   HeightRequest="50"
                   WidthRequest="50"
                   HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand"></Image>
            <Label Text="{Binding Name}" FontSize="Medium"></Label>
            <Label Text="{Binding IsOnline}" FontSize="Small"></Label>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>