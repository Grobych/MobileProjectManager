<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileProjectManager.Views.ProjectPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout x:Name="projectStack">
                <Label Text="Название" />
                <Entry Text="{Binding Name}" FontSize="Medium" />
                <Label Text="Клиент" />
                <Entry Text="{Binding Client}" FontSize="Medium" />
                <Label Text="Описание" />
                <Entry Text="{Binding Description}" FontSize="Medium" />
            </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Button Text="Добавить" Command="{Binding ListViewModel.SaveProjectCommand}" CommandParameter="{Binding}" />
                <Button Text="Удалить" Command="{Binding ListViewModel.DeleteProjectCommand}" CommandParameter="{Binding}" />
                <Button Text="Назад" Command="{Binding Path=ListViewModel.BackCommand}" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>