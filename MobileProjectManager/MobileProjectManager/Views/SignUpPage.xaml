<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileProjectManager.Views.SignUpPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="StartAndExpand">
            <Label Text="Username" />
            <Entry x:Name="usernameEntry" Text="{Binding Name}" Placeholder="username"  />
            <Label Text="Email" />
            <Entry x:Name="emailEntry" Text="{Binding Email}" />
            <Label Text="Password" />
            <Entry x:Name="passwordEntry" Text="{Binding Password}" IsPassword="true" />
            <Button Text="SingUp" Command="{Binding SignUPCommand}" CommandParameter="{Binding}" />
            <Label x:Name="messageLabel" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>